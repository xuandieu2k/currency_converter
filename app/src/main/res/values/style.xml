<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="TextNormal">
        <item name="android:textColor">@color/text_common_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="TextMini">
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="TextViewNumberDark" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_700</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SearchView">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/orange_500</item>
        <item name="titleTextColor">@color/main_bg</item>
        <item name="closeIconTint">@color/main_bg</item>
    </style>

</resources>