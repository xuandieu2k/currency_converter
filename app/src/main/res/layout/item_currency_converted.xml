<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dp_4"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_8">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_2"
        app:cardCornerRadius="@dimen/dp_200"
        app:cardElevation="@dimen/dp_2">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvLogoCurrency"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            tools:src="@drawable/vn" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:orientation="vertical">

        <vn.xdeuhug.currency_converter.base.wiget.AppTextView
            android:id="@+id/tvCurrency"
            style="@style/TextNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            tools:text="VND - Vietnamese dong" />

        <vn.xdeuhug.currency_converter.base.wiget.AppTextViewBold
            android:id="@+id/tvCountry"
            style="@style/TextNormal"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2a9d8f"
            tools:text="(Viet Nam)" />

        <vn.xdeuhug.currency_converter.base.wiget.AppTextView
            android:id="@+id/tvRateConversion"
            style="@style/TextMini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="1 USD = 25000 VND" />

        <vn.xdeuhug.currency_converter.base.wiget.AppTextView
            android:id="@+id/tvRatePrice"
            style="@style/TextMini"
            android:textSize="@dimen/sp_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="Conversion value: 2500000 VND" />
    </LinearLayout>
</LinearLayout>